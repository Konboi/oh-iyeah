<div class="span12">
  <p class="text-right" style="position:fixed; top:80px; right:200px"><a href="<%= @url %>"><input type="button" class="btn btn-info" value="シェアする"></a></p>
</div>

<div class="span12">
  <% @user.photos.each do |photo| %>
    <div class="span2">
      <div>
        <p><a href="#modal<%= photo.id  %>" data-toggle="modal"><img src="<%= photo.thumbnail_url %>"></a></p>
      </div>
    </div>

    <div id="modal<%= photo.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-body">
        <p><img src="<%= photo.url %>" class="large"></p>
      </div>
      <div class="modal-footer">
        <p>Oh!遺影数: <%= photo.goods.length %></p>
        <a href="<%= iyeah_path(photo_id: photo.id, facebook_id: @user.facebook_id) %>"><button class="btn btn-primary">Oh!遺影</button></a>
      </div>
    </div>
  <% end %>
</div>

